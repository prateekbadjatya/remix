generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/db.sqlite"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String

  posts Post[]
  comments Comment[]
  session Session[]
}

model Post {
  id Int @id @default(autoincrement()) 
  userId Int 
  slug String @unique 
  title String 
  content String 
  createdAt DateTime @default(now()) 

  user User @relation(fields: [userId], references: [id])

  comments Comment[]

  @@unique([id, slug])
}

model Comment {
  id Int @id @default(autoincrement()) 
  userId Int 
  postId Int 
  postSlug String 
  body String 
  createdAt DateTime @default(now()) 

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId, postSlug], references: [id, slug], onDelete: Cascade)
}

model Session {
  id Int @id @default(autoincrement())
  userId Int
  expiresAt DateTime
  user User @relation(fields: [userId], references: [id])
}